<% provide(:title, "#{@user.username} | Account") %>

<div class="container-fluid my-5">
    <h1 class="mt-4 mb-3 display-4">Account info</h1>
    <hr>
    <p class="fs-4">Username: <%= @user.username %></p>
    <p class="fs-4">Email: <%= @user.email %></p>
    <p class="fs-4 mb-5">Member since: <%= @user.created_at.month %>/<%= @user.created_at.day %>/<%= @user.created_at.year %></p>
    <%= link_to 'Update account info', edit_user_registration_path %>
</div>