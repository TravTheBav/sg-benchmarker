<% provide(:title, "#{@user.username} | Account | Edit") %>

<div class="container-fluid my-5">
  <div class="container-md py-2 p-md-5 bg-body-secondary rounded-4">
    <h2 class="display-4 text-center py-4">Edit Your Account Information</h2>
    <hr class="my-4">
  
    <div>  
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field my-3">
          <%= f.label :username, class: "form-label fs-4" %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
        </div>

        <div class="field my-3">
          <%= f.label :email, class: "form-label fs-4" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field my-3">
          <%= f.label :password, class: "form-label fs-4" %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field my-3">
          <%= f.label :password_confirmation, class: "form-label fs-4" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field my-3">
          <%= f.label :current_password, class: "form-label fs-4" %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions my-3 pt-2">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <hr>
    <div class="my-4 p-3 bg-body-tertiary">
        <h3 class="header-3">Delete Account</h3>
        <p class="fs-4">Unhappy with Stormgate Benchmarker? Not a problem. You can delete your account here.
        We hope you give us another chance down the line!</p>
        <div><%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm", method: :delete %></div>
    </div>

    <%= link_to "Back", :back %>
  </div>
</div>

