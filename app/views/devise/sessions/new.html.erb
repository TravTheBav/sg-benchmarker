<% provide(:title, "Sign In") %>

<div class="container-fluid my-5">
  <div class="container-md p-md-5 bg-body-secondary rounded-4">
    <h2 class="display-4 text-center py-4">Sign in</h2>
    <hr class="my-4">
  
    <div class="row d-flex justify-content-center">
      <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field my-3">
            <%= f.label :email, class: "form-label fs-4" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="field my-3">
            <%= f.label :password, class: "form-label fs-4" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field my-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "form-label fs-4" %>
            </div>
          <% end %>
          <div class="actions my-3 pt-2">
            <%= f.submit "Sign in", class: "btn btn-primary btn-lg" %>
          </div>
          <p class="fs-4">Not a member? <%= link_to 'Create an account', new_user_registration_path %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
