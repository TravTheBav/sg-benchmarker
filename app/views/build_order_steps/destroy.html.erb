<%= fields model: @build_order do |form| %>
    <%= form.fields_for :build_order_steps, child_index: params[:index] do |step_form| %>
        <%= turbo_frame_tag "build_order_step_#{step_form.index}" do %>
            <%= step_form.hidden_field :id, value: params[:id] %>
            <%= step_form.hidden_field :_destroy, value: true %>
        <% end %>
    <% end %>
<% end %>